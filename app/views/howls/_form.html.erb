<div class="form-wrapper">
  <%= simple_form_for @howl, html: { class: "form-horizontal", multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption, class: "" %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, 'Boof!', class: "btn-primary" %>
    </div>
  <% end %>
</div>
