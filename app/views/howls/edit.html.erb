<div class="text-center">
  <%= image_tag @howl.image.url(:medium) %>
</div>
<div class="form-wrapper">
  <%= simple_form_for @howl, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, 'Re-Boof!', class: 'btn-success' %>
    </div>
  <% end %>
  <div class="text-center edit-links">
    <%= link_to "Cancel", howl_path(@howl) %>
    |
    <%= link_to "Delete Howl", howl_path(@howl), method: :delete, data: { confirm: "Are you sure you want to delete this howl?"} %>
  </div>
</div>
